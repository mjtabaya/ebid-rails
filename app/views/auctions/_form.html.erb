<%= bootstrap_form_with(model: @article, local: true) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(article.errors.count, "error") %> found. Please check the following:</h2>
      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.datetime_select :bidding_expiration %>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, options_for_select(Auction.status_options) %>
  </div>

  <%= f.fields_for :auction_entries do |a| %>
    <%= a.fields_for :product do |b| %>
      <%= b.label :name %>
      <%= b.text_field :name %>
      <%= b.label :description %>
      <%= b.text_area :description %>
    <% end %>
    <%= a.label :lowest_allowable_bid %>
    <%= a.number_field :lowest_allowable_bid %>
    <%= a.label :starting_price %>
    <%= a.number_field :starting_price %>
    <%= a.label :expiration_date %>
    <%= a.datetime_select :expiration_date %>
  <% end %>

  <%= f.submit "Create Auction" %>

<% end %>
